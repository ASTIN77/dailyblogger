<%- include('partials/header') %>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit Post</div>

        <form class="ui form" action="/blogs/<%= blog.id %>" method="POST">
            <input type="hidden" name="_method" value="PUT">

            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title || '' %>">
            </div>

            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image || '' %>">
            </div>

            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" rows="12"><%= blog.body || '' %></textarea>
            </div>

            <button class="ui inverted green button" type="submit">Save</button>
            <a class="ui button" href="/blogs/<%= blog.id %>">Cancel</a>
        </form>
    </div>

    <%- include('partials/footer') %>