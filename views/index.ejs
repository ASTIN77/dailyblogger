<%- include('partials/header') %>

    <div class="ui main text container">
        <div class="ui huge header">The Daily Blogger</div>

        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                    <div class="item">
                        <% if (blog.image) { %>
                            <div class="image">
                                <img src="<%= blog.image %>" alt="<%= blog.title %>">
                            </div>
                            <% } %>
                                <div class="content">
                                    <a class="header" href="/blogs/<%= blog.id %>">
                                        <%= blog.title %>
                                    </a>
                                    <div class="meta">
                                        <span>
                                            <%= (blog.created && blog.created.toDateString) ?
                                                blog.created.toDateString() : '' %>
                                        </span>
                                    </div>
                                    <div class="description">
                                        <p><%- (blog.body || '' ).substring(0, 100) %>...</p>
                                    </div>
                                    <div class="extra">
                                        <a class="ui floated inverted green button" href="/blogs/<%= blog.id %>">Read
                                            More</a>
                                        <i class="right chevron icon"></i>
                                    </div>
                                </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>